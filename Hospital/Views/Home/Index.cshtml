@{
    ViewData["Title"] = "Welcome to Our Hospital";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome to Our Hospital</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">

    <div class="container mx-auto mt-8 px-4">
        <h1 class="text-4xl font-semibold text-center mb-4">Welcome to Our Hospital</h1>
        <p class="text-center text-gray-600 mb-4">Thank you for choosing our hospital for your healthcare needs.</p>
        <p class="text-center text-gray-600 mb-8">Here, we strive to provide the highest quality medical care to our patients.</p>

        <h2 class="text-2xl font-semibold text-center mb-4">Learn more about our services and specialties:</h2>
        <div class="max-w-2xl mx-auto">
            <table class="table table-bordered text-center">
                <tbody>
                    <tr>
                        <td>Internal Medicine</td>
                    </tr>
                    <tr>
                        <td>Pediatrics</td>
                    </tr>
                    <tr>
                        <td>Surgery</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <p class="text-center text-gray-600 mb-8">If you have any questions or need any assistance, please don't hesitate to contact us.</p>

    </div>

    <footer class="mt-12 p-4">
        <div class="container mx-auto text-center text-gray-600">
            © 2024 - Hospital - <a href="#" class="text-blue-500">Privacy</a>
        </div>
    </footer>
</body>
</html>